[MAIN]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; import os; sys.path.append(os.path.join(os.getcwd(), "src"))'

# Files or directories to be skipped
ignore=.git,__pycache__,docs,build,dist,.venv,venv,migrations,tests

# Files or directories matching regex patterns are skipped
ignore-patterns=test_.*\.py,.*_test\.py

[MESSAGES CONTROL]
# Disable specific pylint messages
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    C0301,  # line-too-long
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    W0622,  # redefined-builtin
    E1101,  # no-member (often false positives with dynamic attributes)
    R0801,  # duplicate-code
    W0613,  # unused-argument
    R0401,  # cyclic-import
    W0611,  # unused-import
    import-error,
    no-name-in-module

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

[BASIC]
# Regular expression for acceptable variable names
variable-rgx=[a-z_][a-z0-9_]{0,30}$

# Regular expression for acceptable function names
function-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression for acceptable class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Regular expression for acceptable module names
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[DESIGN]
# Maximum number of arguments for functions/methods
max-args=10

# Maximum number of attributes for a class
max-attributes=20

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=30

# Maximum number of return / yield for function / method body
max-returns=10

# Maximum number of statements in function / method body
max-statements=50

# Minimum number of public methods for a class
min-public-methods=0

[IMPORTS]
# Allow wildcard imports
allow-wildcard-with-all=yes

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=builtins.BaseException,builtins.Exception