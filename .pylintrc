[MAIN]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; import os; sys.path.append(os.path.join(os.getcwd(), "src"))'

# Files or directories to be skipped (build/cache only, include tests)
ignore=.git,__pycache__,build,dist,.venv,venv

[MESSAGES CONTROL]
# Disable specific pylint messages for better compatibility
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    C0301,  # line-too-long
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    W0622,  # redefined-builtin
    E1101,  # no-member (often false positives with dynamic attributes)
    R0801,  # duplicate-code
    W0613,  # unused-argument
    R0401,  # cyclic-import
    W0611,  # unused-import
    import-error,
    no-name-in-module

[FORMAT]
max-line-length=88

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
max-public-methods=20
max-bool-expr=5

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes